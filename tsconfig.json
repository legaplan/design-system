{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/native/*": ["./src/native/src/*"],
      "@/web/*": ["./src/web/src/*"],
      "design-system/theme": ["src/styles/global.scss"],
      "design-system/native": ["design-system/dist/native/src"],
      "design-system/web": ["design-system/dist/web/src"]
    },
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.stories.tsx", "**/*.stories.ts"]
}
